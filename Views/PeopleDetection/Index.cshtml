@model PeopleDetectionViewModel
@{
    ViewData["Title"] = "People Detection";
}

<div class="text-center mb-4">
    <h1>👁️ People Detection System</h1>
    <p>Computer Vision based access control and monitoring</p>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData?["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<!-- Detection Stats -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h5>Today's Detections</h5>
                <h2 class="text-primary">@Model.Stats.TodayDetections</h2>
                <small>People detected today</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h5>Authorized Access</h5>
                <h2 class="text-success">@Model.Stats.AuthorizedAccess</h2>
                <small>Successful recognitions</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h5>Unauthorized Attempts</h5>
                <h2 class="text-danger">@Model.Stats.UnauthorizedAttempts</h2>
                <small>Unknown person alerts</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h5>System Status</h5>
                <h2 class="@(Model.Stats.SystemActive ? "text-success" : "text-danger")">
                    @(Model.Stats.SystemActive ? "Active" : "Offline")
                </h2>
                <small>Camera and AI model</small>
            </div>
        </div>
    </div>
</div>

